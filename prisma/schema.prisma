generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Pages {
  id   Int    @id @default(autoincrement())
  name String
  slug String @unique

  title           String?
  sub_title       String?
  description     String?
  seo_title       String?
  seo_description String?

  images Images[]
  navbar Navbar[]
}

model Images {
  id       Int     @id @default(autoincrement())
  atribute String?
  src      String?

  pages Pages[]

  classes Classes[]
}

model Navbar {
  id    Int    @id @default(autoincrement())
  title String

  pageId Int?
  link   Pages? @relation(fields: [pageId], references: [id])
}

model Category {
  id Int @id @default(autoincrement())

  name     String?
  products Product[]
}

model Product {
  id Int @id @default(autoincrement())

  title           String
  description     String?
  image           String?
  price           Decimal
  discountedPrice Decimal?
  vegan           Boolean  @default(false)
  bestOfTheDay    Boolean  @default(false)

  categoryId Int?
  category   Category? @relation(fields: [categoryId], references: [id])

  classeeId Int?
  classes   Classes? @relation(fields: [classeeId], references: [id])

  items OrderItem[]
}

model ContactRequest {
  id        Int      @id @default(autoincrement())
  name      String
  phone     String?
  email     String?
  message   String?
  createdAt DateTime @default(now())

  items OrderItem[]
}

model OrderItem {
  id Int @id @default(autoincrement())

  contactOrderId Int?
  contactOrder   ContactRequest? @relation(fields: [contactOrderId], references: [id])

  productId Int
  product   Product @relation(fields: [productId], references: [id])

  quantity Int
}

model Tables {
  id               Int @id @default(autoincrement())
  table_number     Int @unique
  max_count_people Int

  orders Orders[]
}

model FreeHours {
  id     Int     @id @default(autoincrement())
  day    String?
  hours  String?
  closed Boolean @default(false)
}

model Orders {
  id           Int      @id @default(autoincrement())
  customerName String?
  count_guest  Int?
  createdAt    DateTime @default(now())

  tableId Int
  table   Tables @relation(fields: [tableId], references: [id])

  day  String?
  hour String?
}

model Classes {
  id           Int       @id @default(autoincrement())
  title        String?
  classes_name String?
  date         DateTime?
  link         String?

  description String?
  price       Decimal
  language    String?
  location    String?

  imageId Int
  image   Images @relation(fields: [imageId], references: [id])

  products Product[]

  teacherId Int
  teacher   Teachers @relation(fields: [teacherId], references: [id])
}

model Teachers {
  id          Int     @id @default(autoincrement())
  teacher     String?
  img         String?
  description String?

  instagram String?
  facebook  String?
  twiter    String?

  classes Classes[]
}

model Blog {
  id          Int     @id @default(autoincrement())
  date        String?
  title       String?
  short_desc  String?
  description String?
  image       String?
}
